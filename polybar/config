[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = true
strip-wsnumbers = true
pin-workspaces = true

label-mode-padding = 5
label-mode-foreground = #ffffff

label-unfocused-foreground = #888888
label-unfocused-padding = 1

label-visible-foregroud = #888888
label-visible-padding = 1

label-focused-foreground = #ffffff
label-focused-padding = 1

label-urgent-padding = 1

[module/date]
type = internal/date
interval = 5

date = " %d/%m/%y"

time = "   %H:%M:%S"

label = %date% %time%

format = <label>

[module/volume]
type = internal/volume

format-volume = <ramp-volume> <label-volume> <bar-volume>
label-volume =
label-volume-foreground = ${root.foreground}
label-muted = muted

bar-volume-width = 30
bar-volume-foreground-0 = #55aa55
bar-volume-foreground-1 = #55aa55
bar-volume-foreground-2 = #55aa55
bar-volume-foreground-3 = #55aa55
bar-volume-foreground-4 = #55aa55
bar-volume-foreground-5 = #f5a70a
bar-volume-foreground-6 = #ff5555
bar-volume-gradient = false
bar-volume-indicator = │
bar-volume-indicator-font = 2
bar-volume-indicator-foreground = #ff
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground =

ramp-volume-0 = ""
ramp-volume-1 = ""
ramp-volume-2 = ""
ramp-volume-3 = ""
ramp-volume-4 = ""

[module/wired-network]
type = internal/network
interface = enp12s0
interval = 3.0

label-connected = %local_ip%%{T-}
label-disconnected = 
label-disconnected-foreground = #66
label-connected-padding = 5
label-disconnected-padding = 5

[module/wired-network2]
type = internal/network
interface = enp10s0
interval = 3.0

label-connected = %local_ip%%{T-}
label-disconnected = 
label-disconnected-foreground = #66
label-padding = 5

[module/wireless-network]
type = internal/network
interface = wlp7s0

format-connected = <label-connected>
format-disconnected = <label-disconnected>
format-packetloss = <animation-packetloss> <label-connected>

label-connected =  %essid% %downspeed:9%
label-connected-foreground = #eefafafa
label-connected-padding = 5

label-disconnected =  no wifi
label-disconnected-padding = 5
label-disconnected-foreground = #66ffffff

[module/memory]
type = internal/memory
label =  %percentage_used%%
label-padding = 3

[module/cpu]
type = internal/cpu
format = <label>
label = "%{A1:termite:} %percentage%%%{A}"

label-padding = 3

[module/temperature]
type = internal/temperature
interval = 0.5
thermal-zone = 0
warn-temperature = 80

format = <ramp> <label>

label = %temperature%
label-warn = %temperature%
label-warn-foreground = #f00
label-padding = 3

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-3 = 
ramp-4 = 
